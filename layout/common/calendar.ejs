<div class="article-inner calendar">
  <%- partial('common/scripts') %>
  <header class="calendar__header">
    <%- partial('post/title', { class_name: 'calendar__header__title' }) %>
  </header>
  <div class="calendar__container">
    <script type='text/javascript'>
      $(document).ready(function() {
        $('#calendar').fullCalendar({
          googleCalendarApiKey: '<%= theme.plugins.google_cal_api %>',
          events: {
            googleCalendarId: '<%= theme.plugins.google_cal_id %>@group.calendar.google.com'
          }
        });
      });
    </script>
    <div id='calendar'></div>
  </div>
  <% if (post.calSubscribe !== undefined) { %>
    <div class="calendar__message">
      <a class="footer-info__link" href="<%- url_for(post.calSubscribe.url) %>"><%= post.calSubscribe.text %></a>
    </div>
  <% } %>
  <% if (post.calMessage !== undefined) { %>
    <div class="calendar__message">
      <a class="footer-info__link" href="<%- url_for(post.calMessage.url) %>"><%= post.calMessage.text %></a>
    </div>
  <% } %>
